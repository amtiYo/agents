{
  "mcpServers": {
    "context7": {
      "enabled": false
    },
    "filesystem": {
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${PROJECT_ROOT}"
      ]
    },
    "custom_server": {
      "label": "Custom",
      "description": "Project-specific MCP server defined locally",
      "transport": "stdio",
      "command": "npx",
